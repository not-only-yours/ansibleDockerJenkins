---
- hosts: My_Group
  become: yes
  tasks:
    - name: Build Docker Jenkins Image
        docker_image:
          name: jenkins-docker
          build:
            path: .
            pull: "yes"
          source: build
          state: present
    - name: Create Docker Jenkins Container
        docker_container:
          name: jenkins
          image: jenkins-docker
          ports:
            - "8080:8080"
            - "50000:50000"
          volumes:
            - "jenkins_home:/var/jenkins_home"
            - "/var/run/docker.sock:/var/run/docker.sock"
          state: started
